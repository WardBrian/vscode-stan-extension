{
  "name": "vscode-stan-extension",
  "displayName": "Stan",
  "description": "Stan language support for VS Code",
  "version": "0.8.0",
  "publisher": "wardbrian",
  "repository": "https://github.com/wardbrian/vscode-stan-extension",
  "icon": "img/stan_logo.png",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters",
    "Linters"
  ],
  "keywords": [
    "stan"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "browser": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "stan",
        "aliases": [
          "Stan",
          "stan"
        ],
        "extensions": [
          ".stan"
        ],
        "icon": {
          "light": "./lang/stan_logo.svg",
          "dark": "./lang/stan_logo.svg"
        },
        "configuration": "./lang/language-configuration.json"
      },
      {
        "id": "stanfunctions",
        "aliases": [
          "Stan Functions",
          "stan-functions"
        ],
        "extensions": [
          ".stanfunctions"
        ],
        "icon": {
          "light": "./lang/stan_logo.svg",
          "dark": "./lang/stan_logo.svg"
        },
        "configuration": "./lang/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "stan",
        "scopeName": "source.stan",
        "path": "./lang/syntaxes/stan.json"
      },
      {
        "language": "stanfunctions",
        "scopeName": "source.stanfunctions",
        "path": "./lang/syntaxes/stanfunctions.json"
      },
      {
        "scopeName": "markdown.stan.codeblock",
        "path": "./lang/syntaxes/stan-markdown-code-block.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.stan": "stan"
        }
      }
    ],
    "snippets": [
      {
        "language": "stan",
        "path": "./lang/snippets/snippets.json"
      },
      {
        "language": "stanfunctions",
        "path": "./lang/snippets/snippets.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Stan formatting",
      "properties": {
        "vscode-stan-extension.format.lineLength": {
          "type": "number",
          "default": 78,
          "markdownDescription": "Target line length"
        }
      }
    }
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "arrowParens": "avoid"
  },
  "scripts": {
    "compile": "npm run check-types && node esbuild.js",
    "format": "prettier --write .",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all --parallel watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "vscode:prepublish": "npm run package",
    "package": "rm -rf ./dist/ && npm run check-types && node esbuild.js --production",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. .",
    "build": "vsce package"
  },
  "dependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "diff": "^4.0.1",
    "trie-search": "^2.0.0"
  },
  "devDependencies": {
    "@types/diff": "^5.2.1",
    "@types/node": "^20.14.3",
    "@types/vscode": "^1.76.0",
    "@vscode/test-web": "^0.0.54",
    "@vscode/vsce": "^2.27.0",
    "esbuild": "^0.21.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.2",
    "typescript": "^4.9.5"
  }
}
